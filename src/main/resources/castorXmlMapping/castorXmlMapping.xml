<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>
 
    <description>
        Placeholder XML Configuration for all the Mapped Domain Objects.
    </description>
    
    <!--include href="castorMapping-Device.xml"/>
    <include href="castorMapping-Port.xml"/-->
    
    <!-- START of Mapping for DeviceXmlMapper! -->
    <class name="com.adaranet.xml.DeviceXmlMapper">         
        <map-to xml="devices" />  
        <field name="devices" type="com.adaranet.model.Device" collection="arraylist">
             <bind-xml name="devices" />
        </field>
    </class>
    <!-- END of Mapping for DeviceXmlMapper -->
    
    <!-- START of Mapping for PortXmlMapper! -->
    <class name="com.adaranet.xml.PortXmlMapper">         
        <map-to xml="ports" />  
        <field name="deviceHasPorts" type="com.adaranet.model.Device" collection="arraylist">
             <bind-xml name="device" />
        </field>
    </class>
    <!-- END of Mapping for PortXmlMapper -->
    
    <!-- START of Mapping for ConnectDevicePortsXmlMapper! --> 
    <!--class name="com.adaranet.xml.ConnectDevicePortsXmlMapper">         
        <map-to xml="connectDevicePorts" />  
        <field name="connections" type="com.adaranet.model.Device" collection="set" container="false">
             <bind-xml name="connections" />
        </field>
    </class-->
    <class name="com.adaranet.xml.xmlWrappers.ConnectionsWrapper">         
        <map-to xml="connectDevicePorts" />  
        <field name="connections" type="com.adaranet.xml.xmlWrappers.Connections" collection="set">
             <bind-xml name="connections" />
        </field>
    </class>
    
    <class name="com.adaranet.xml.xmlWrappers.Connections">         
        <map-to xml="connections" />  
        <field name="sourceDevice" type="com.adaranet.model.Device">
             <bind-xml name="sourceDevice" />
        </field>
        <field name="destinationDevice" type="com.adaranet.model.Device">
             <bind-xml name="destinationDevice" />
        </field>
        <field name="connectionProperties" type="com.adaranet.relationships.ConnectsToPort">
             <bind-xml name="connectionProperties" />
        </field>
    </class>
    <!-- END of Mapping for ConnectDevicePortsXmlMapper -->
    
    <!-- START of Mapping for Device Entity! -->
    <class name="com.adaranet.model.Device" auto-complete="true">         
        <map-to xml="device" />         
        <field name="deviceName" type="string" required="true">
            <bind-xml name="deviceName" node="element"/>
        </field>       
         <field name="deviceType" type="string" required="false">
            <bind-xml name="deviceType" node="element"/>
        </field> 
        <field name="cpuUtilization" type="string" required="false">
            <bind-xml name="cpuUtilization" node="element"/>
        </field>  
        <field name="numberOfSessions" type="string" required="false">
            <bind-xml name="numberOfSessions" node="element"/>
        </field>   
        <field name="deviceHasPortsSetMappedByXml" type="com.adaranet.model.Port" collection="set" container="false">
             <bind-xml name="hasPorts" />
        </field>      
        <field name="hasPorts" type="com.adaranet.relationships.HasPort" collection="set">
             <bind-xml name="hasPort" />
        </field>
    </class>
    <!-- END of Mapping for Device -->
    
    <!-- START of Mapping for HasPort Entity! -->
    <class name="com.adaranet.relationships.HasPort">         
        <map-to xml="hasPorts" />        
        <field name="startDevice" type="com.adaranet.model.Device">
            <bind-xml name="devices" node="element"/>
        </field>       
         <field name="connectedPort" type="com.adaranet.model.Port">
            <bind-xml name="port" node="element"/>
        </field>        
        <field name="value" type="string">
            <bind-xml name="value" node="attribute"/>
        </field>
        <field name="cost" type="string">
            <bind-xml name="cost" node="attribute"/>
        </field>
    </class>
    <!-- END of Mapping for Device -->
    
    <!-- START of Mapping for Port Entity! --> 
    <class name="com.adaranet.model.Port" auto-complete="true">         
        <map-to xml="port" />
        <field name="portName" type="string" required="true">
            <bind-xml name="portName" node="element"/>
        </field>        
         <field name="portType" type="string" required="false">
            <bind-xml name="portType" node="element"/>
        </field>
        <field name="packetsIn" type="string" required="false">
            <bind-xml name="packetsIn" node="element"/>
        </field>   
        <field name="packetsOut" type="string" required="false">
            <bind-xml name="packetsOut" node="element"/>
        </field>   
        <field name="bitsIn" type="string" required="false">
            <bind-xml name="bitsIn" node="element"/>
        </field>   
        <field name="bitsOut" type="string" required="false">
            <bind-xml name="bitsOut" node="element"/>
        </field>   
        <field name="connectedPorts" type="com.adaranet.relationships.ConnectsToPort" collection="set">
             <bind-xml name="connectedPorts" />
        </field>        
    </class>
	<!-- END of Mapping for Port Entity! -->
	
	<!-- START of Mapping for ConnectsToPort Relationship Entity! --> 
    <class name="com.adaranet.relationships.ConnectsToPort" auto-complete="true">         
        <map-to xml="connectionProperties" />
        <field name="linkCapacity" type="string" required="false">
            <bind-xml name="linkCapacity" node="element"/>
        </field>        
         <field name="availableBandwidth" type="string" required="false">
            <bind-xml name="availableBandwidth" node="element"/>
        </field>
        <field name="latency" type="string" required="false">
            <bind-xml name="latency" node="element"/>
        </field>    
    </class>
	<!-- END of Mapping for ConnectsToPort Relationship Entity! -->
	
</mapping>